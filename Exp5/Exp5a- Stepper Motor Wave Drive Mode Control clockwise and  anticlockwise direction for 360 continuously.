ORG 0000H

MAIN: MOV R3, #0CH

L1:
    MOV P1, #08H
    ACALL DELAY
    MOV P1, #04H
    ACALL DELAY
    MOV P1, #02H
    ACALL DELAY
    MOV P1, #01H
    ACALL DELAY
    DJNZ R3, L1
    MOV R3, #0CH

L2:
    MOV P1, #01H
    ACALL DELAY
    MOV P1, #02H
    ACALL DELAY
    MOV P1, #04H
    ACALL DELAY
    MOV P1, #08H
    ACALL DELAY
    DJNZ R3, L2
    SJMP MAIN

DELAY:
    MOV R2, #01
L3: MOV R1, #255
L4: MOV R0, #255
L5: DJNZ R0, L5
    DJNZ R1, L4
    DJNZ R2, L3
    RET

END


