ORG 0000H

MOV R0, #30H       ; Pointer to Fahrenheit data
MOV R1, #40H       ; Pointer to Celsius result
MOV R2, #05        ; Number of values to convert

LOOP:
    MOV A, @R0     ; Load Fahrenheit value
    CLR C
    SUBB A, #32    ; A = F - 32
    MOV B, #9
    DIV AB         ; A = (F - 32) / 9, B = remainder (discarded)
    MOV B, #5
    MUL AB         ; A = ((F - 32)/9) * 5

    MOV @R1, A     ; Store Celsius result

    INC R0         ; Move to next Fahrenheit value
    INC R1         ; Move to next Celsius storage location
    DJNZ R2, LOOP  ; Repeat for next byte

END
