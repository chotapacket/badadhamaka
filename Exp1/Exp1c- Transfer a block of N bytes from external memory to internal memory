ORG 0000H

        MOV R0, #30H          ; R0 = Internal destination pointer (30H)
        MOV DPTR, #1000H      ; DPTR = External source pointer (1000H)
        
        MOV R2, #05H          ; Assume block length = 5 for now
                              ; (You can change this or load from a memory location if needed)

L1:   MOVX A, @DPTR          ; Read byte from external memory into A
        MOV @R0, A             ; Write byte from A to internal memory
        INC DPTR               ; Move to next external memory byte
        INC R0                 ; Move to next internal memory byte
        DJNZ R2, L1          ; Decrement counter (R3), repeat if not zero

        END
